<%- include('../layout', { 
    pageTitle: 'Login', 
    css: `
        <style>
            .rounded-15 {
                border-radius: 15px !important;
            }
            .rounded-10 {
                border-radius: 10px !important;
            }
        </style>
    `,
    content: `
        <div class="content d-flex justify-content-center align-items-center">

            <!-- Login form -->
            <form class="login-form" action="#">
                <div class="card mb-0 rounded-15">
                    <div class="card-body">
                        <div class="form-group">
                            <input type="text" class="form-control rounded-10" placeholder="Email">
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control rounded-10" placeholder="Password">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn bg-primary-700 btn-block rounded-10">Login</button>
                        </div>
                        <div class="text-center">
                            <span class="d-block text-muted">Don't have an account?</span>
                            <a href="/register" class="text-primary-700">Register</a>
                        </div>
                    </div>
                </div>
            </form>
            <!-- /login form -->

        </div>
    ` 
}) %>